@model ShoppingCart

<form method="post">
    <div class="card container">
        <div class="card-header bg-primary text-light ml-0 row">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.barang.Name</h1>
                <p class="text-warning">@Model.barang.desk</p>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">
                            <div class="row pl-2">
                                <input asp-for="count" class="form-control" />
                            </div>
                        </div>
                        <div class="col-4 col-lg-4">
                            <div>
                                <img src="@Model.barang.photo" width="100%" class="rounded" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 col-lg-6">
                             <a asp-controller="Home" asp-action="Index" class="btn btn-info" type="button"> Back to Home</a>
                        </div>
                        <div class="col-6 col-lg-6">
                             <a asp-controller="Home" asp-action="Index" class="btn btn-info" type="button">Add To Cart</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</form>